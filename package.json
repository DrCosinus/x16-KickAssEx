{
	"name": "x16-kickass-ex",
	"displayName": "x16-KickAssEx",
	"description": "Commander X16 Kick Assembler VSCode Extension",
	"version": "1.2.0",
	"publisher": "DrCosinus",
	"license": "MIT",
	"author": {
		"name": "SÃ©bastien Dezautez",
		"email": "drcosinus@free.fr"
	},
	"repository": {
		"url": "https://github.com/DrCosinus/x16-KickAssEx"
	},
	"icon": "images/icon.png",
	"galleryBanner": {
		"color": "#0000AA",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.83.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Themes"
	],
	"activationEvents": [
		"onLanguage:states"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "x16-kickass-ex.build",
				"title": "X16 Build"
			},
			{
				"command": "x16-kickass-ex.build_n_run",
				"title": "X16 Build and Run"
			}
		],
		"languages": [
			{
				"id": "kickassembler",
				"aliases": [
					"kickassembler",
					"kickass"
				],
				"extensions": [
					".asm",
					".inc",
					".s",
					".a",
					".lib"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "kickassembler",
				"scopeName": "source.assembly.kickassembler",
				"path": "./syntaxes/kickassembler.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "kickassembler",
				"path": "./snippets/kickassembler.code-snippets"
			}
		],
		"themes": [
			{
				"label": "KickAssembler",
				"uiTheme": "vs-dark",
				"path": "./themes/KickAssembler-color-theme.json"
			}
		],
		"configuration": {
			"title": "X16 Kick Assembler Ex Configuration",
			"properties": {
				"x16-kickass-ex.kickAssJar": {
					"type": "string",
					"default": "/Applications/KickAssembler/KickAss.jar",
					"description": "Full path to KickAss.jar"
				},
				"x16-kickass-ex.java": {
					"type": "string",
					"default": "java",
					"description": "Java VM"
				},
				"x16-kickass-ex.debug": {
					"type": "boolean",
					"default": false,
					"description": "Additional debug info, like stacktraces, to the output"
				},
				"x16-kickass-ex.showmem": {
					"type": "boolean",
					"default": false,
					"description": "Show a memory map after assembling."
				},
				"x16-kickass-ex.symbols": {
					"type": "boolean",
					"default": false,
					"description": "Generates a .sym file with the resolved symbols. The file can be used in other sources with the .import source directive. Its written next to the prg file."
				},
				"x16-kickass-ex.bytedump": {
					"type": "boolean",
					"default": false,
					"description": "Dumps the assembled bytes in the file ByteDump.txt together with the code that generated them"
				},
				"x16-kickass-ex.x16emulator": {
					"type": "string",
					"default": "",
					"description": "Full path to Commander X16 emulator"
				},
				"x16-kickass-ex.x16emulatorKeymap": {
					"type": "string",
					"default": "",
					"description": "Commander X16 : switch to a specific keyboard layout. Optional: leave blank for default."
				},
				"x16-kickass-ex.x16emulatorSDCard": {
					"type": "string",
					"default": "",
					"description": "Commander X16 : lets you specify and SD Card image (partition table + FAT32) that will be mounted at emulator start (Optional)."
				},
				"x16-kickass-ex.x16emulatorScale": {
					"type": "string",
					"default": "2",
					"description": "Commander X16 : scales video output to an integer multiple of 640x480."
				},
				"x16-kickass-ex.x16emulatorDebug": {
					"type": "boolean",
					"default": "true",
					"description": "Commander X16 : ennables the debbuger (enable with [F12] in emulator, disable with [F5])."
				},
				"x16-kickass-ex.x16emulatorRunPrg": {
					"type": "boolean",
					"default": "true",
					"description": "Commander X16 : execute build program after emulator start."
				},
				"x16-kickass-ex.x16emulatorWarp": {
					"type": "boolean",
					"default": "false",
					"description": "Commander X16 : causes the emulator to run as fast as possible, possibly faster than a real X16."
				}
			}
		},
		"keybindings": [
			{
				"command": "x16-kickass-ex.build",
				"key": "shift+ctrl+b",
				"mac": "shift+cmd+b",
				"when": "editorLangId == kickassembler"
			},
			{
				"command": "x16-kickass-ex.build_n_run",
				"key": "shift+ctrl+r",
				"mac": "shift+cmd+r",
				"when": "editorLangId == kickassembler"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.83.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vscode/test-electron": "^2.2.0",
		"eslint": "^8.28.0",
		"glob": "^8.0.3",
		"mocha": "^10.1.0",
		"typescript": "^4.9.3"
	},
	"dependencies": {
		"antlr4": "^4.13.1",
		"antlr4ts": "^0.5.0-alpha.4",
		"vscode-jsonrpc": "^8.2.0",
		"vscode-languageserver": "^9.0.1",
		"vscode-languageserver-protocol": "^3.17.5"
	}
}
